{% extends 'base.html.twig' %}

{% block content %}
<article class="alert alert-success">
    <p>Your secret have been created successfully.</p>
</article>

<article class="linkForShare">
    <header class="title">
        <h1>Link for share the secret</h1>
    </header>
    <section class="link">
        <p>You can share this secret with this link. Copy and paste in your email or chat:</p>
        <input type="text" class="url" value="{{ response.getLinkForShare.getUrl }}"/>
    </section>
</article>

<article class="secret">
    <header class="title">
        <h1>Secret</h1>
    </header>
    <section class="message">
        <p>Message</p>
        <textarea class="field">{{ response.getSecret.message.getContent }}</textarea>
    </section>
</article>

<article class="alert alert-warning">
    <p>Remember: this link only works one time.</p>
</article>
<article class="link-to-create-secret">
    <a href="/" title="Create a new secret" class="button button-primary">create new secret</a>
</article>

{% endblock %}