{% extends 'base.html.twig' %}

{% block content %}
<article class="alert alert-success">
    <p>Your self destruct message have been created successfully.</p>
    <p><strong>Remember: this link only works one time.</strong></p>
</article>

<article class="link-for-share">
    <header class="title">
        <h1>Link for share the self destruct message</h1>
    </header>
    <section class="link">
        <p>You can share this self destruct message with this link. Copy and paste in your email or chat:</p>
        <input
            id="link-for-share"
            type="text"
            class="link-field"
            value="{{ response.getLinkForShare.getUrl }}"/>
    </section>
</article>

<article class="secret">
    <header class="title">
        <h1>Self destruct message</h1>
    </header>
    <section class="content">
        <article class="message">
            <p><strong>Message</strong></p>
            <textarea class="message-field" disabled>
                {{ response.getSecret.message.getContent }}
            </textarea>
        </article>
        <article class="expiration-date">
            <p>
                <strong>Expires at</strong>
                <span class="expiration-date-field">{{ response.getSecret.getExpirationDate.format('Y-m-d H:i:s') }}</span>
                (<span class="expiration-time-field">{{ response.getSecret.getExpirationTime.getSeconds }}</span> seconds).

            </p>
        </article>
    </section>
</article>

<article class="link-to-create-secret">
    <a href="/" title="Create a new self destruct message" class="button button-primary">Create a new self destruct message</a>
</article>

{% endblock %}

{% block javascripts %}
    <script src="/javascript/secret/secret_created.js"></script>
{% endblock %}